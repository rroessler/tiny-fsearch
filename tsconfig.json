{
    "compilerOptions": {
        "rootDir": "lib",
        "outDir": "dist",
        "skipLibCheck": true,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "dist/types",

        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,

        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "lib": ["ESNext"]
    },

    "include": ["lib/**/*"],
    "exclude": ["dist/**/*", "node_modules/**/*"]
}
