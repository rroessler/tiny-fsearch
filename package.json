{
    "name": "tiny-fsearch",
    "version": "2.0.2",
    "description": "A small and versatile find-in-file/search library.",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "dist": "run-s clean dist:*",
        "dist:ts": "tsc",
        "dist:gyp": "node-gyp configure && node-gyp build --jobs 17 --release",
        "clean": "run-p clean:*",
        "clean:ts": "rimraf dist",
        "clean:gyp": "node-gyp clean",
        "test": "ava",
        "prepublishOnly": "run-s clean:ts dist:ts"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "tools/**/*",
        "binding.gyp"
    ],
    "keywords": [],
    "author": "rroesslerio",
    "license": "MIT",
    "homepage": "https://github.com/rroessler/tiny-fsearch#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rroessler/tiny-fsearch.git"
    },
    "devDependencies": {
        "@types/bindings": "^1.5.1",
        "ava": "^5.1.0",
        "node-gyp": "^9.3.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "bindings": "^1.5.0",
        "fast-glob": "^3.2.12",
        "node-addon-api": "^5.0.0"
    },
    "ava": {
        "files": [
            "lib/tests/**/*"
        ],
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
